{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "esModuleInterop": true,
//    "typeRoots": ["./src/typings", "./node_modules/@types"],
    "types": ["cypress", "node"]
  },

  "compileOnSave": true,
  "include": ["src"],
  "exclude": [
    "./src/typings",
    "./node_modules/@types",
    "src/**/*.test.*",
    "src/**/*.spec.*"
  ]
}
